<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.app.hexuegang.wsnmonitor.MainActivity">

        <io.github.leibnik.wechatradiobar.WechatRadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"
            android:orientation="horizontal">

            <io.github.leibnik.wechatradiobar.WechatRadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="水"
                android:textColor="#555"
                android:textSize="13sp"
                app:defocus_icon="@mipmap/water_gray"
                app:focus_color="#50ba26"
                app:focus_icon="@mipmap/water_blue"
                app:icon_height="25dp"
                app:icon_width="25dp" />

            <io.github.leibnik.wechatradiobar.WechatRadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="大气"
                android:textColor="#555"
                android:textSize="13sp"
                app:defocus_icon="@mipmap/air_gray"
                app:focus_color="#50ba26"
                app:focus_icon="@mipmap/air_blue"
                app:icon_height="25dp"
                app:icon_width="25dp" />

            <io.github.leibnik.wechatradiobar.WechatRadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="土壤"
                android:textColor="#555"
                android:textSize="13sp"
                app:defocus_icon="@mipmap/soil_gray"
                app:focus_color="#50ba26"
                app:focus_icon="@mipmap/soil_blue"
                app:icon_height="25dp"
                app:icon_width="25dp" />

            <io.github.leibnik.wechatradiobar.WechatRadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="噪声"
                android:textColor="#555"
                android:textSize="13sp"
                app:defocus_icon="@mipmap/noise_gray"
                app:focus_color="#50ba26"
                app:focus_icon="@mipmap/noise_blue"
                app:icon_height="25dp"
                app:icon_width="25dp" />

            <io.github.leibnik.wechatradiobar.WechatRadioButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:paddingTop="3dp"
                android:text="总评"
                android:textColor="#555"
                android:textSize="13sp"
                app:defocus_icon="@mipmap/discover"
                app:focus_color="#50ba26"
                app:focus_icon="@mipmap/discover_green"
                app:icon_height="25dp"
                app:icon_width="25dp" />
        </io.github.leibnik.wechatradiobar.WechatRadioGroup>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/radiogroup"
            android:background="#555" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/line"></android.support.v4.view.ViewPager>

    </RelativeLayout>
</layout>
